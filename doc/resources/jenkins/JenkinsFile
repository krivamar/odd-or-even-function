node {
    withEnv(['AZURE_SUBSCRIPTION_ID=9174b98d-a763-47ad-a94a-ca7066b103c6',
            'AZURE_TENANT_ID=b9fec68c-c92d-461e-9a97-3d03a0f18b82']) {
        stage('Init') {
            cleanWs()
            checkout scm
        }

        stage('Build') {
            sh 'mvn clean package'
        }

        stage('Publish') {
            // def RESOURCE_GROUP = '<resource_group>'
            def RESOURCE_GROUP = 'krivamar_functions'
            def FUNC_NAME = 'krivamarfce'
            // login Azure
            withCredentials([usernamePassword(credentialsId: 'Jetkins_krivamar', passwordVariable: 'AZURE_CLIENT_SECRET', usernameVariable: 'AZURE_CLIENT_ID')]) {
            sh '''
                az login --service-principal -u $AZURE_CLIENT_ID -p $AZURE_CLIENT_SECRET -t $AZURE_TENANT_ID
                az account set -s $AZURE_SUBSCRIPTION_ID
            '''
            }
            sh 'cd $PWD/target/azure-functions/odd-or-even-function-sample && zip -r ../../../archive.zip ./* && cd -'
            sh "az functionapp deployment source config-zip -g $RESOURCE_GROUP -n $FUNC_NAME --src archive.zip"
            sh 'az logout'
        }
    }
}
